noextract=("${pkgname}.tar.gz")
sha512sums=("617a3a25424fb4e604ab25d3a98e914747fad62277580a517e4baaa9c1eebe06483d043f99755c44a08396551b545a852a8fbfb7297a758143ad0b6a605832b5")

package() {
	cd "${pkgdir}"
