noextract=("${pkgname}.tar.gz")
sha512sums=("a90b0abf317e4a0e08509f9f42628acf30db66419cddad485f8dadd6b54142d3d93144e46a1ee72788c123d08bc5ea1457d3d8bae7ea58010b0c8781cf83bb46")

package() {
    cd "${pkgdir}"
