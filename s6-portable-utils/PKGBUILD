source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("a5195d5749d62a0685e76be8796609c8f825559bbfa152e3dcd5735f9e58d8a1d2e91a55d1c5a17eea61605b89360ff1cefabb9fe62b5b5283709756976d391f")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
