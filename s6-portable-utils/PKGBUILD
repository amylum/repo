source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("189f5a26589677d759ca1675862621a8f01e31a81cf08c8ed60dc2f7acc03807376b90b7798d89fb9e6f8e6e6148e16952352ca139a32758601d802e6b5dbd62")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
