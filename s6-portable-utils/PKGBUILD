noextract=("${pkgname}.tar.gz")
sha512sums=("9fe69f1809337a848c9af11216f01104efefb040eaf05cb628b38a19b8d21f4e9e604d321be94c940624a51c11fcb3f96df7f45e5f5404d9cf8d16e3f6595075")

package() {
	cd "${pkgdir}"
