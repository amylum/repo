source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("3e83a6d1e497faa76f44b942a536638652f04c4202dba314986cda709fd5895f847611ba4505ee38a2156bfbbe1390dad583437c6c9f00cef135ef7d08289a19")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
