license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("95abdbddecc6a8e3a1c00ca32029796cf8b1e1cd5f2679d747e653c916177f2ea4f33fcba2af59ab284572fc31cdaf968bc99b0bbab6840f81d55d3ed7922bf0")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
