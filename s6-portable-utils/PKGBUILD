noextract=("${pkgname}.tar.gz")
sha512sums=("b9c3d6d2ffd9e93870cd7dd46514d3cf672399d5a7cfc5428780d81e448fa8301dbf1a137bccb791e61a33b49232fbf7c016dc0076e4b246fdf40640b6a3d11d")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
