pkgname=s6-portable-utils
pkgver=2.2.1.1_4
pkgrel=1
pkgdesc="minimalistic system utilities"
arch=('x86_64')
url="https://github.com/amylum/s6-portable-utils"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("4e4a156924be0dcda7d724d769ce953af51fde072e6825141b9bddb3cb323e737db80f44dcedae2c8e818019b47db1915b079e91b797e0fe1cca8aac90b97689")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
