source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("a07dc37ba6a18432938dfd23a8c87e79b0134cf21f9f21a260fdd19fb47a3febfbd24aaebb1296c5017395ae4aa61668cedde17bd5104b6fb4c2be1c7642526f")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
