source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("1ebdc4dacacb50eb5a81500466e8a4a4f52cebdbe94b0f5685d9a94508b6efe5e569a836475e5649ffe7e4e5ac6443bf4fe7afc2bae4fa0cf3cc1ef1c0d06912")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
