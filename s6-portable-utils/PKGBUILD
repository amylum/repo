license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("d5fa67efa7d474b36b3ffbebb18830a3e84f6829eb61fc971967e92eff10b85963cff1e47773080dd6fc517d51a8418bfff9766f80a7d88452810638e8d9adc2")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
