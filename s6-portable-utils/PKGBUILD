license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("f0396d81543ac5a75e8bb9fbc74ff4e08c5d47b6e6b44863cf4c809ba7c944f8883076838f264a9bbcb3943a0008c02a3b7e54d84657ef1eafd93d93914f7910")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
