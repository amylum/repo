source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("daa52e60c8b2202857851565cba6d479aa517b7fa6d45438afe2ee0e4abe321048d760182d7b38ace6255befae38e9019db59692e66f72c6312e283087fb9103")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
