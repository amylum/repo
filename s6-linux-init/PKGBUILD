pkgname=s6-linux-init
pkgver=0.4.0.1_1
pkgrel=1
pkgdesc="minimal init binary builder"
arch=('x86_64')
url="https://github.com/amylum/s6-linux-init"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("cdea5ee2099435e60c5e6b12c8dc7553b11bf8107b7cd70b37b03665fb0cea31426cfe3844650ac7134aca6d7f05661d28573743257a40994026a8682bfd5c1c")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
