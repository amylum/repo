license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("89180c9830cd043b43fb87aa676a6cf05af2cfdffb6a3b242b31ee96e8bde4e4a7b6d51a52fd93045a022229cdf5fa73c0b3fc42274905912af1ce17b2420b98")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
