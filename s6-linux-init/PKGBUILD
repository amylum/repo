license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("8b58b03a6e7dce8907fa76fadc4b91e1242dcec9ab7625adc54edd3cee3c2ceb120e5245cc4ef4f50d0f103d0255aa036ab6bfce124a7ad75414699e304de04e")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
