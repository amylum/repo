pkgrel=1
pkgdesc="minimal init binary builder"
arch=('x86_64')
url="https://github.com/amylum/s6-linux-init"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("60ced693ea7e31ee988fd5cb2a4f7e3bfc9b0aebbc8a2fdb8088d6b6a52ebe17380472f9dbd06a1bd4573d03fd8390107b7d4bf816bcacdbc5388de574d52962")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
