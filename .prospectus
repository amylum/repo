require 'open-uri'
require_relative 'scripts/pkgbuilds.rb'

PKGBUILDS = Pkgbuilds.all

URL = 'https://repo.scrtybybscrty.org/list.txt'
REPO = open(URL).readlines.map do |line|
  _, name, version = line.match(/^(.+)-([^-]+-\d+)$/).to_a
  next unless name
  [name, version]
end.compact.to_h

item do
  name 'repo'
  noop

  deps do
    PKGBUILDS.each do |p|
      next if p.dummy?
      item do
        name "pkgbuild::#{p.name}"

        expected do
          github_release
          repo p.repo
        end

        actual do
          static
          set p.version
        end
      end

      item do
        name "s3::#{p.name}"

        expected do
          static
          set p.arch_full_version
        end

        actual do
          static
          set(REPO[p.name] || 'none')
        end
      end
    end
  end
end
