# Maintainer: Les Aker <me@lesaker.org>
pkgname=procps-ng-amylum
_realname=procps-ng
pkgver=3.3.14_1
pkgrel=1
pkgdesc="Process utilities"
arch=('x86_64')
url="https://github.com/amylum/procps-ng"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("1fde3da19b10756fd6b8e354e41dcb81855fdf0e82e5314842bb266905713b4e5f0e38f5fdb7d97ebe8ea9ca9e34af4d1a97cc5175879531aaec867c613ff530")

conflicts=('procps' 'sysvinit-tools' "${_realname}")
provides=('procps' 'sysvinit-tools' "${_realname}")
replaces=('procps' 'sysvinit-tools')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
