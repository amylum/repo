noextract=("${pkgname}.tar.gz")
sha512sums=("8d7dfaeee4dc56ec9e25f32d14c43457174d4661d265ea5cbcc5a0d2ce14206beeea83b82c7b1ddb90246b395c60c3fb205dc70146fa868dc15fb59acec950c2")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
