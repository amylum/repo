pkgname=s6
pkgver=2.6.1.0_1
pkgrel=2
pkgdesc="Process supervision suite"
arch=('x86_64')
url="https://github.com/amylum/s6"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("764151cddb7b6c90bed5a370507b8469b716aeefc13a1db6b372fc4080838b947b6bc353c95290d8282ed67c2183be7a94fddbeab2c48687081858c23d033d62")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
