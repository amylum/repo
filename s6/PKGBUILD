source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("e24dcfbd47b06266b38492c88b93ffcad58dd88b15ef086b1366249300d646f96bf41c042c6bbdbc6e904d1b036284a276a2292025c53e7701d2bdacabc06fab")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
