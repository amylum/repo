# Maintainer: Les Aker <me@lesaker.org>
pkgname=libgpg-error-amylum
_realname=libgpg-error
pkgver=1.29_1
pkgrel=1
pkgdesc="Support library for libgcrypt"
arch=('x86_64')
url="https://github.com/amylum/libgpg-error"
license=('LGPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("f4e18bb18c9bae199a3d92a8ad0256df96a09b47740bbd7234769a059d662e8cf8c22b2bb5722c560c8fd85ec2ee10d04eee534176ee3cedbeb5a455c0236155")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
