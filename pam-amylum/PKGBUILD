# Maintainer: Les Aker <me@lesaker.org>
pkgname=pam-amylum
_realname=pam
pkgver=1.3.0_35
pkgrel=1
pkgdesc="PAM (Pluggable Authentication Modules) library"
arch=('x86_64')
url="https://github.com/amylum/pam"
license=('GPL2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("4ca8e2c250a49108fa9bb461381c3ae1d801a73f50dc0aa285a969669ada7947e944ca145abeecc1e7600b3c050df7a6bf5f4c0e21a4ac378ed181d94db56313")

backup=(etc/security/{access.conf,group.conf,limits.conf,namespace.conf,namespace.init,pam_env.conf,time.conf} etc/environment)


conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
