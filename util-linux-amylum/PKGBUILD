# Maintainer: Les Aker <me@lesaker.org>
pkgname=util-linux-amylum
_realname=util-linux
pkgver=2.27.1_5
pkgrel=1
pkgdesc="Miscellaneous system utilities for Linux"
arch=('x86_64')
url="https://github.com/amylum/util-linux"
license=('GPL3')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("6bd5bb7c32dd5892cda744325581750e8b6315fe162fedd57ebf31a385f44e5486373e812f39fb21489e65363ad4d12a2a94de9b5508600ca3fd449cb84e7f36")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${_realname}.tar.gz"
	mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
