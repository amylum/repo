# Maintainer: Les Aker <me@lesaker.org>
pkgname=containerd-amylum
_realname=containerd
pkgver=0.2.2_1
pkgrel=1
pkgdesc="A daemon to control runC, built for performance and density"
provides=("${_realname}")
conflicts=("${_realname}")
arch=('x86_64')
url="https://github.com/amylum/containerd"
license=('Apache')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("d8c787531484a6a2a6fd8c0ae490d5ec9f46e85571a71624cb0c0d56e893fb2b90587ee3b7fd1c15e2b9b85105e12def8dcab56a06a8345f43ffbd9931088338")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
