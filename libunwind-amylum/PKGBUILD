# Maintainer: Les Aker <me@lesaker.org>
pkgname=libunwind-amylum
_realname=libunwind
pkgver=1.2_2
pkgrel=1
pkgdesc="Portable and efficient C programming interface (API) to determine the call-chain of a program"
arch=('x86_64')
url="https://github.com/amylum/libunwind"
license=('MIT')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("688b346f234db1711d612fcfc9378ca91b5a9e76ef7815fdb8849ed8e62b01745e1af12fdb089f7571f4bc8ebd8e12994350bab3e239ab5b42b3bbeff5997f9f")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
