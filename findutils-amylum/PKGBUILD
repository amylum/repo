# Maintainer: Les Aker <me@lesaker.org>
pkgname=findutils-amylum
_realname=findutils
pkgver=4.6.0_3
pkgrel=1
pkgdesc="GNU utilities to locate files"
arch=('x86_64')
url="https://github.com/amylum/findutils"
license=('GPL3')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("ac9d75baec0b50a852bcbe9a5247c719cf1935fd0e759583a6cb3773e9a8fc2a4aa88dc330b76eb58a25f7c3f1bb8a491997cf165d21dcc15692707fcd064e39")

depends=('bash')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
