# Maintainer: Les Aker <me@lesaker.org>
pkgname=libunistring-amylum
_realname=libunistring
pkgver=0.9.7_1
pkgrel=2
pkgdesc="Library for manipulating Unicode strings and C strings"
arch=('x86_64')
url="https://github.com/amylum/libunistring"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("34e228e7ea5741b4aba9289146643d2a9e6177e708acdb46abc63be0ba8b9778eaa9cf7ff444a8cc4ed695dcf8537bb6d1f3964b3f0697817db2f4e8d541cbe8")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
