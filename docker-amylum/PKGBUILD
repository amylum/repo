# Maintainer: Les Aker <me@lesaker.org>
pkgname=docker-amylum
_realname=docker
pkgver=17.05.0_ce_7
pkgrel=1
pkgdesc="application container engine"
provides=("${_realname}")
conflicts=("${_realname}")
arch=('x86_64')
url="https://github.com/amylum/docker"
license=('Apache')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("825b1b27a414c21b38cccb7472525032fa625c1e47a97e865cac6cdb7f523d9dea5dc4440489537fa68a3c80776fbece2dfabf1b100d583eb8e943404121c773")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
