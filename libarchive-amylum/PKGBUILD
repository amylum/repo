# Maintainer: Les Aker <me@lesaker.org>
pkgname=libarchive-amylum
_realname=libarchive
pkgver=3.2.2_1
pkgrel=1
pkgdesc="library that can create and read several streaming archive formats"
arch=('x86_64')
url="https://github.com/amylum/libarchive"
license=('BSD')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("8bb32557682baae5794fdaa6a9e646feca285c5bf75625b68f8855fc134f153f5aad9c4db2d9a1844b8ddbaecb192d8ab9a4e2e3b1d927fb90800347bba09366")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
