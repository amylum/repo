# Maintainer: Les Aker <me@lesaker.org>
pkgname=libassuan-amylum
_realname=libassuan
pkgver=2.4.2_5
pkgrel=1
pkgdesc="A IPC library used by some GnuPG related software"
arch=('x86_64')
url="https://github.com/amylum/libassuan"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("0a40ae410e40462a8ab0c660aecd6002d68565ea59503fc551e19490493703b5775b67cabbff9f7afa8838cc6ab0c0e17fbac717a44252971155310d57bbd2f2")

depends=('bash')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
