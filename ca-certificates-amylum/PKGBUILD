# Maintainer: Les Aker <me@lesaker.org>
pkgname=ca-certificates-amylum
_realname=ca-certificates
pkgver=20181_0_1
pkgrel=1
pkgdesc="Common CA certificates"
arch=('x86_64')
url="https://github.com/amylum/ca-certificates"
license=('MIT')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("4cb1d56d41ba615f2056bd9a10c7db115522ee7686d8572afec2e54cc7b940ab04c48fd03c694b491b394412c9462cfbe6d3d484cd032a216aa000b4b91a6184")

install=ca-certificates.install

depends=('bash-amylum' 'findutils-amylum' 'p11-kit-amylum')
conflicts=("${_realname}")
provides=("${_realname}" "ca-certificates-utils")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
