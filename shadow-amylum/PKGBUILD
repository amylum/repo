# Maintainer: Les Aker <me@lesaker.org>
pkgname=shadow-amylum
_realname=shadow
pkgver=4.2.1_7
pkgrel=2
pkgdesc="Password and account management tool suite with support for shadow files and PAM"
arch=('x86_64')
url="https://github.com/amylum/shadow"
license=('BSD')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("5db4b0e5e7fcc903a78a408718a7d6f92e69ac00b5ce4465b03335cbc6426ca1e66215d586823a4a61d620ececccd37d16d7727d51ea6313141f35e9b4d4c3b0")

backup=(etc/login.defs etc/default/useradd)

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
