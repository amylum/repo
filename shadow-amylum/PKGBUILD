# Maintainer: Les Aker <me@lesaker.org>
pkgname=shadow-amylum
_realname=shadow
pkgver=4.2.1_6
pkgrel=2
pkgdesc="Password and account management tool suite with support for shadow files and PAM"
arch=('x86_64')
url="https://github.com/amylum/shadow"
license=('BSD')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("532f113431aa099a63d3b74dbc2f83bd433baf156de34d22562d650cba7a1cc17d2d434828927b0ad35872ef094aaafd55cf17ff11328c8bb727e5a37ac4da22")

backup=(etc/login.defs etc/default/useradd)

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
