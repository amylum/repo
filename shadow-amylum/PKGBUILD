# Maintainer: Les Aker <me@lesaker.org>
pkgname=shadow-amylum
_realname=shadow
pkgver=4.4_1
pkgrel=2
pkgdesc="Password and account management tool suite with support for shadow files and PAM"
arch=('x86_64')
url="https://github.com/amylum/shadow"
license=('BSD')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("a4818ae4651113162db4cbcd3f2aa2454a125a35c49ce2fd0e577fac7338dc2f0a89059a7f551d46ee7ceafffa424a91931ef384ece5dd0861fc14b1f81b282f")

backup=(etc/login.defs etc/default/useradd)

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
