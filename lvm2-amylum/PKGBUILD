pkgname=lvm2-amylum
_realname=lvm2
pkgver=2.02.177_10
pkgrel=1
pkgdesc="Logical Volume Manager 2 utilities"
arch=('x86_64')
url="https://github.com/amylum/lvm2"
license=('GPL2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("e7a6391d405ddf1dcd8686496189fb0d5466a69adafe8c594de0048e390ebc3d1c9ac1d18ca41e62b554ecfc8c0ebf1e71cd8a212027552401ba359f11767b98")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
