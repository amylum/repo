pkgname=skalibs
pkgver=2.3.8.3_36
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("4c4443d4e29f3ce294508ed5f43fe86423c1e1d25ca593c79918cc9baf2486816ff78df71da900b6d929c9925fa9a824ae920d34193b66eb35ab60b1851bc085")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
