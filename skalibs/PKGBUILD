license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("3417b5fc4fd6e0036d3876437a0ad8a649887c82a09d0a2ca5b35e86370327901da6c7aa25a0b8938ba9dd7bc98c4fabf3436898180588d61018132ac9f3f25b")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
