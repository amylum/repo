license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("3aca982a5461a4f77a7bc06f5aabd39debd88a211c2af03d014350f6bfe5a9629bf1084d29bd30affdcb5f6178297e19c4e4eb01fadff36c3b7e318636b22b08")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
