pkgname=skalibs
pkgver=2.6.3.1_1
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("474ab856d1f78f25dd560f9abdb851d6f9f38fcd9e29c6596e4c09735ad690c0454fe89f93f698147e16d770eb5311e691c9812da59cf4ea02696656bbafeebc")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
