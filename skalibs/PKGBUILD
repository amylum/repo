noextract=("${pkgname}.tar.gz")
sha512sums=("9aa9a20e8f10c22530e4a3d053d3fe9d0dc4ede3175c0f25f6beef4d22f461b54b8d4fe2e2c0d61cae2a4585fede828169fa850e0df972d293bcdfcdbe69761f")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
