pkgname=skalibs
pkgver=2.6.3.0_1
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("0d8eb45e7d0a8521a4926779a45c45f3fcd8739f8a2ad71424456d972bd18d7ce317719e32898ca2a319817ba0d01fd04c0812ca3033789fbe9e520b155c5acf")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
