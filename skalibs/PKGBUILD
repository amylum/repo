pkgname=skalibs
pkgver=2.3.1.0_20
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("333224615b022193a592aa21643ea6000cb2f36b50e1ee8aef0e6fb87092b73e8be8a93762b05fae264ba5b499b831bd5d7e118eab8f77bbb6cb9ecd4e659d80")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
