pkgname=skalibs
pkgver=2.3.3.0_24
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("14a69ad366fa77c5f3c6831a78228db3318d318d39dab2d4bea394815ca85910268f3c1186086d1897274db77435468ba3a27166899ab7ee7988d79f68b4b5ee")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
