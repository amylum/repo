noextract=("${pkgname}.tar.gz")
sha512sums=("68629c9de2ee31a2755347162af4d48785ba8ae16b694f7c012b231a6f81fc9339cf4ceb4c5e70b6d730754511fe4b25c75e0724b7396f96b42e7cc260061378")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
