pkgname=skalibs
pkgver=2.3.3.0_26
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
depends=('glibc')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("f4fe3e1069502e1fe136ed1a99e6a87ddbb28d7afae24a049f072cf905dd29d3ae2eb9c34998a7e2b3efedc7e16b6d04c59ec677f20eb3d22b08d84208491660")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
