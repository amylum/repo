license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("f94510715f733bbd6384d4005b3d5e0860ff21e03a96553238adf8a13a6df059246eefac5fb89a0168cbce6a5a6364fcad14d3fab8459b515127234663584ace")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
