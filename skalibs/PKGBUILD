license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("411e105c7e2be188e907478f1a6e5b1d7536407992b6bf203ac02135e2cbb7200f8ac97a431d53a99d72191b2c9bce5e16961ba2494a3ccf7db9550c5cb176b9")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
