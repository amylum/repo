pkgname=skalibs
pkgver=2.5.1.1_1
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("0529f28c7ec7bf899a548543899facc76a0a33f010e70897dd64f938a46f611b17952981abc32facef29a32e193cf01ea292a9986ea658c5518f115ec0c379a5")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
