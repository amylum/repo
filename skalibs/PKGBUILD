license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("1b11f2e1c40fd4c0d4713b33252a129fe5ef85993771838a6add97bb3b8c46a7b52172273d5c3fbc6a84e81a85b28a991dd4cbf8bf3dea839128c3c61f062d5e")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
