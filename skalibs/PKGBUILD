pkgname=skalibs
pkgver=2.8.0.0_1
pkgrel=1
pkgdesc="general-purpose libraries for skarnet packages"
arch=('x86_64')
url="https://github.com/amylum/skalibs"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("5f943b00fd85fb6190894249f5572921c76f3cb916e63e83e2defad4ce6a51c02bd52b1a1017dbd669b49340600fa2aa0f06e30c26b0a35d1d3830209761dd57")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
