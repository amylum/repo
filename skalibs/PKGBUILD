license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("42eb22624da5d9303e586e6649aa6ec9d7d7dbd32da770b28ab359e75c9b5b9a3587c68d5388fd3ef5990d4002cd75c47076fb47b1a76a151e4212d7b69e1ff9")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
