# Maintainer: Les Aker <me@lesaker.org>
pkgname=ncurses-amylum
_realname=ncurses
pkgver=6.0_20170909_1
pkgrel=1
pkgdesc="System V Release 4.0 curses emulation library"
arch=('x86_64')
url="https://github.com/amylum/ncurses"
license=('MIT')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("e455f8fcbfb748b24e55e063b1fc84c95fe0b2043e8fbd08fe2704bf139658f2c852c52a5c25e5d65eee66cd9c1d971bda9642b719498d93965b67459ee99a84")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
