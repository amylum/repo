pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_9
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("9b8ae3f7f7836850d8478706abaf75f86532398dc48ffcc1c3ecb05dd2886360e57c8b10f51c8995b1147c2c205360ab143df79dfc509dd97e911293aeabfd94")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
