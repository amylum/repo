pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_20
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("8372926a46ac9129f02d683c4c7c5928bd226110b531ad9d636f2dfedac1e87ba1b31826dec073b170ac7b447a37bcbaf2df340fc67fc78662c655944ca36d54")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
