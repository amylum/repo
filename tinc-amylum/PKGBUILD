pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_19
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("d42131c5a96628df08294ac4fc9795db1a11df2dbf4e547c080b1db2b8f84ffc7c2e6c46d05d43c1ee18fe80f0d6f03ae290c1e150a44ea6da6b111d833ec2b3")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
