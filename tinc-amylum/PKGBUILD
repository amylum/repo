pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_18
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("a45f3735d98cd17bfec6623569fa0d352c0d4c1bc3f5ce99980ab0309001f63b01e6adbc3388562d543010535fb5c63ab1b8792b90846f690c54927d38eb4726")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
