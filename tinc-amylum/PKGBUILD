pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_13
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("2e06f838c7f8a9e8ebb475598e6741640808a79a02de80acffca603267392655e771ba84de3eaccd99c5ffb44ad9163125591dd20726bab7d3ee8c6f5171f0bb")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
