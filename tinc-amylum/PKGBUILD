pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_37
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("0680cfaa3833348b94ac24100878e5b446030e6a2817f2088786e7e5887d5b857bb3cccd958a588183ed2f6a330b4fb5b44a7deed1776288853706cd704f179e")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
