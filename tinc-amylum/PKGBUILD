pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_34
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("048bcae1df50a7286c049a0d464e2f9f955825ea16b5a77eea7853a12b1aabc6ddbd6816cc8712f831b475476358d7d9473b564c429c517ef781f7488841c7dc")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
