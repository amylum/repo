pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_17
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("b673d77218f7dbc8612df1457b2d709a0e069e638ac5ce16d2cc9cbf1374583d8706ffcc28dfc75ad86a5fd30c554a10092b4567bae6eba06e6ed9825e130c2f")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
