pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_27
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("c1506f780da70f587b64c5cb93b89ca7354668f4c52bbc8a503de3aac44bc58ec2804de2c459cad84c4bcd2cdeeba09e521767e37d83b1dcc97b3542fe2aac93")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
