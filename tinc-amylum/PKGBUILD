pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_12
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("dcda566245321e24ecc9eb4a386a271d6d42741ef9ce36e5ead640207118e5d55f7be11d6ea419fefd31fb2fd468d6cdd5b0d29098726a6000cd9356491dbc30")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
