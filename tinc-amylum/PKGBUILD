pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_21
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("34dfdba741b625a3714a80970362e11f7ea01a527e7dc6184fa06eca1a63f85ffb8093a9a466eeb5123ff338d22bf88a603e0150d237988126788dd47ef9800a")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
