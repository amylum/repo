pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_33
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("9b6c8270f0d683221534a761dc972a91b5a24a8b07470380cfd761a4a1822e1d6d560f0e7b0e8d9ab0a56d72015a31aaad0d0cb9b930754e718ca192f30388c9")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
