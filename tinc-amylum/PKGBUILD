pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_29
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("6cadc8b0a2921a216bc5788effcbbceeb6d0725e3c590b1b17e768274b060566e6a3be4296803928ccd1ce9bb4aaf23ae3464b3f304820b8842178f15264e862")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
