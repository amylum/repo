pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_16
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("6235d46cb2571a13b1c9e8f2ed97b32483685332fd8eef4ef9de9d4d27dbc35a14a58d7570e91a218f25a8820cf1f196a3746a40b70bfd852f7f1f9bb11fce78")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
