pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_39
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("7bf53802f4ca55fa5b04944ece04783f239c44c03f8b17434526c58c578bc0548e88f50d7f9218051fb4098cff322086212a22e799a991bfcbc99ac7f741d119")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
