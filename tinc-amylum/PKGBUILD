pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_23
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("342b5062ff48c9ea56d194ce2b8dab12f2beaf0a49d5faeb825ece43d12bb77fde889d72b606cd8788f37b10105ad8dddb354b8579790dd20ce7d7e360c0bd12")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
