pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_4
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("58eba5a029dd6c15276b6ac2effda526383c722f259223270d7e82cad1048cc0e01866fa1610d6c4d3208c9891f80cf71c371b12b289bfddff24be470d600e32")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
