pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_3
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("bcde1485c39c82ccdec5c895d21fa947ed5f77061495e4facce9ea1d70b917cd210c3059edb58cdd987eaa612667ee7d70e28f016c4b8949177805d3f0c526da")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
