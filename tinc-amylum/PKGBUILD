pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_40
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("33f2214ab25a439e726890e7fa9eaf9d9cfec7161353ad49e6b2bc2a98545cf160d05a50a0e7dc61e7958e48fa26f0d84530af3cd533a6e03573e5dd00375054")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
