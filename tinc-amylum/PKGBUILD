pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_2
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("ef46c1cdfcd5fc0a1161afc9428dc34cb9498d5d25bcc5cbe048fa5fce2f41f060298e471185120b313ef1ca48161457b923d7d2f1209f84907c05ef00ef147b")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
