pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_1
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("0809b5415c5d1adf6c109c5db9c9a72f02a7b478eceed0f6c3dd6527410fa98521e33a2eccc3105d54743bb8deee77c37bd8a555966ec9636732b5f8c77f3c53")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
