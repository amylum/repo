pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_14
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("fe3f947e06f527d6f8ba5379ee8b5bdb72bc76228264221f0a2150bbd8336231255ab5711ba0dbcb6888a98b1384899965658030d641e75ca2063c1b81d69187")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
