pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_8
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("e05cfa9e284df2e763089c2ffba589ca33e98e7a999024be44d0344e09ec143f270b7ebee4957b0032eeeef05331b542787bb8d1715c2b8aa45a155d55a558db")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
