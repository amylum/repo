pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_22
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("d019c409600a3573bf27a33a6ae7c8b62092df4e55f557f75ccfd97eeb5dbf615f137f47e3526a337486ced7adcd7e9a0b399779a394115e5510dc4138201574")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
