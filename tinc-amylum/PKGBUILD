pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_34
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("d6faabd4f3f819231699d63960b37874a728532f7ff161d215b33d57a2ee05c0ebde50e2f49140c63068e06377794845248fe7593ff866fc4f2205d8b522f89a")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
