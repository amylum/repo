pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_7
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("cc4c0ea6295dd4a950124ef19d46aa0c40f0cfb153a8c4d8a51f458a1c3671d66927633a12dd55e4e7af9c6c58bf9af7d16f3f2929432b8e12edf5382bbd76fe")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
