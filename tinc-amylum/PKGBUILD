pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_25
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("e540cae5bf0b9610f44071545d8f911473046022762f047a405bb9e016013cbf2f6e23e83065110d479c58a5350215dfecbaa858e81f7cd8a7802930d33a5bd1")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
