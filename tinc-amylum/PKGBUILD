pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_18
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("5365a65cc5959f505ccda17f181ff8ba7356593dfce441b26135de7355a2518892b97a37558c0a520017031025ea1641d59e66f956d7cff284aca9757960819e")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
