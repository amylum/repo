pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_24
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("3d86f2841dd4a82b86ba2e7e1c0888756ed313661c6348543e81716ab22a6abff097dd9ff1f1663c5cdff4d4adddb8e5e64d0cfad29ac03e44e2c3458fa14997")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
