pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_33
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("98db6eeede448989068ce226512c7a9040b41fb2756113bd8bc84841eaee8fcf9c80a4ec329808376fa0f1df758e12b894e606b5d29d8d7bc7a5c1e083e51b0c")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
