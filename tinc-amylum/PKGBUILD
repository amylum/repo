pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_30
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("9a51f949cc7c93c84dc66735c13c9d13ea60136e90fd0178f3a665181e7b6ccaa0e19e3dc1aa4881c39cb85319ca23fd5eb4a437759fe77807f0919425de781d")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
