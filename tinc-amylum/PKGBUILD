pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre15_5
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("7662ab73be2377490f86f6c5914e9b064687d535b7f7d90a9bb2c0e350c0790315c202f13ce3b04289e8b14260059fe7abbb94b8c686757a01e7c4b9c5d2adfb")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
