pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_6
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("d544f2e75342b052021d7a3aff27ad9ba20b8fd4179e0062a7d536bdb738c0c37e71fef80fff57665cc5cb3fdf247ebb348bc56c578d5a18eec21f0baf098fdd")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
