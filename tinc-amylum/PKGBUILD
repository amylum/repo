pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_32
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("698733db067152d92f25db318c08addff337b83cc08756e6c138a13c4479b3cf030b23540e4241e90b5129aff09a6196d5e6fcff9502c90177da041fa52a60e8")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
