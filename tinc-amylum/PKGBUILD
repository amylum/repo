pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_10
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("85054b697409e0ed08f7686cb645fcc186d9dd1a4a62c75fb81aef88b3248ae7036df3eea6ef394f8ac38ed63c31ecb2143026418d00ad8c957ca9a42627944f")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
