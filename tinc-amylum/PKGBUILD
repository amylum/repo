pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_28
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("3ab9ebfb4e8ea8111f9200456d9dcbe505d5820bf9664b45214110ea4d4052f00c6ff453b278bd85f7bc36cca88df5f78544227c8ce8cc3b882a7a36839bdf4e")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
