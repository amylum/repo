pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre17_7
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("dcd111adf8ea2e193d51ac2761e76aa9e9fcf8178bf7b7be8b0ea96c1106c88f5bec565c47f8c689da0452eec682abbea687f834ed8450a69899777d34342de4")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
