pkgname=tinc-amylum
_realname=tinc
pkgver=1.1pre14_19
pkgrel=1
pkgdesc="Mesh VPN"
arch=('x86_64')
url="https://github.com/amylum/tinc"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("cde08d261ab931e35516b89c81b18eafb174d7a25706fa6a5dd085cc7b2a1497336282efc02db5ceeefa8bed341e90213516f38385267ebe18607940d755c442")

depends=('python' 'lzo')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
