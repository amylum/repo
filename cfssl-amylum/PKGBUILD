# Maintainer: Les Aker <me@lesaker.org>
pkgname=cfssl-amylum
_realname=cfssl
pkgver=1.2.0_dev17_1
pkgrel=1
pkgdesc="A free library for arbitrary precision arithmetic"
arch=('x86_64')
url="https://github.com/amylum/cfssl"
license=('BSD-2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("6f574f5acf2d00b0a8948aefc5ca61325e3d9de9eb72ea69b55c5475faa53c431663dc47d67fe5ca65bb3f7215cb2dd9fdf98c8dc0cf6d3e02c706ba34c321e1")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
