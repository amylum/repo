# Maintainer: Les Aker <me@lesaker.org>
pkgname=openssh-amylum
_realname=openssh
pkgver=7.7p1_3
pkgrel=1
pkgdesc="SSH connectivity tools"
arch=('x86_64')
url="https://github.com/amylum/openssh"
license=('custom:BSD')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("24f575a096d8190e676b30066a1e0d8b2e3c7565811e29f53ce5250f992c646aff2a2a3f16ff43b09360c9b8e867b9b626ec485314a19dc0850a1db5b9c55212")

backup=('etc/ssh/sshd_config')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
