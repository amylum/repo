# Maintainer: Les Aker <me@lesaker.org>
pkgname=openntpd-amylum
_realname=openntpd
pkgver=6.2p3_4
pkgrel=1
pkgdesc="Free, easy to use implementation of the Network Time Protocol"
arch=('x86_64')
url="https://github.com/amylum/openntpd"
license=('BSD')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("4de6e41a6c1281b26aaf63f9aefec329a62c61e3d33003e4e990caeb8bd5e65938e40fd94ff3a82edf83727504e46b50a552ac3c0ee6c0cfee79cb7738562175")

install=$pkgname.install
backup=('etc/ntpd.conf')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
