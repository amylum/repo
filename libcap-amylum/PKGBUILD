# Maintainer: Les Aker <me@lesaker.org>
pkgname=libcap-amylum
_realname=libcap
pkgver=2.25_2
pkgrel=1
pkgdesc="POSIX 1003.1e capabilities"
arch=('x86_64')
url="https://github.com/amylum/libcap"
license=('GPL2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.libcap.gz")
noextract=("${_realname}.libcap.gz")
sha512sums=("bf7b6fdda7e666e56971cf37b986770570cb802d171f2244f31ee78d58dfe5e5005b7bf5424bf035d6ca73e70d7db07228c0d5bbf2005dddb84a835af411aa83")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.libcap.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
