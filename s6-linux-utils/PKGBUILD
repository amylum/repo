noextract=("${pkgname}.tar.gz")
sha512sums=("5b65ab1ffe7ad27c3537b04ba5e8ceb7d9af7404fc41ac884c9192f2a9c86f30f63d7ba1c820b7e51ed25e0f6c83c45a5e686992d9acd72cbb5a51e5e5cdff55")

package() {
    cd "${pkgdir}"
