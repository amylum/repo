pkgname=s6-linux-utils
pkgver=2.2.0.0_2
pkgrel=1
pkgdesc="minimalistic Linux-specific system utilities"
arch=('x86_64')
url="https://github.com/amylum/s6-linux-utils"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("76100df0d5ac1b860da045e606041a9afe4153d9e643fce5f3dda4f63896245d2608211f614fd0e1ddb76704aca4aee4f3646d0ca230e6751f1f3f8de1868e1f")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
