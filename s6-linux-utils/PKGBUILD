arch=('x86_64')
url="https://github.com/amylum/s6-linux-utils"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("134c3ed25bbea2dc365f29003c6340b0f40891dd6574c1253ecf82b60e68aa8b23645bedfe0d7a1e9a708eebc76fd733d0edc384ef3a2c8780032296cd07d483")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
