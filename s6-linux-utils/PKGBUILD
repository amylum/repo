license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("385698a46e1dc0fe654e8058cde1913b9d3f7eebeb0651c15ed17d6050b55bfb961597e74e6b8d6d165c09e1f10c4888d4f4b80a12693eb0a6c26b4fbb3cb68f")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
