license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("bb4f29189000fc0d02aa199464a937789b4c4a3be92755719c23f8d9778b73f2b7896bce14eb6a7517303f3d9282a5803a60508bcf68e414a7b0dec9acecd609")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
