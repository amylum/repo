license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("35ea38a5670e594c617ae4328217d97456a48208dc1b4043bbd850a961d33520ed7cc985355f9a09338440206067abfae8ef5a231c3adc90712675df90f9223c")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
