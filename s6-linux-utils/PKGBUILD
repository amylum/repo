license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("f9ca77421665bbb3e0c5e39244729cb5a6a68b409c83b393f9dc39c9d8e0ccf11da101e63a1fff2f6dd7dcfba33d411237c357224af3b4f4615188348e8f1f7b")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
