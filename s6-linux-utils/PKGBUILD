license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("30d7f7c75d0ee3f27d2b67c3d2e938f5930db901e0b62a854657f0ec8d99de518317db6f822cc653dc862fb9d502483541fdea25e6ff9cf975a97df260413c57")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
