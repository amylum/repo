license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("b822985ed81a5d8d88001d9d8d5d69462db63ce5a9d98fac6f88335baeb84c32588c79468723af970788a9a67e31b822711d9d53c1287d0ca23766dd4afd5853")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
