source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("a1a11bb1dfb9a015aae2edaeb03fe893fb21d5ec8c61d6405fceeb77acec9f8bc5fe9a7dd1f690063267a13760a9fa538f940b09772f73c723067dd33b2e5b18")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${pkgname}.tar.gz"
}
