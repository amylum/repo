license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("c355331b03f6d5f8a17daa1e9a285aad5693236c10b16cfef4cb7ebe73709795f781fda8aa42485b6d86ae1cad696dc8de4b910df5ac065274228f25507c0df3")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
