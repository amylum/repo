arch=('x86_64')
url="https://github.com/amylum/s6-linux-utils"
license=('custom:ISC')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("9d84753db41fb87d20b0b0e17eb04c4e7c7dfa8a082a7f6d0c1ae1fcbe466c0482491467145f35aed38c9f64a8a0c99c86c6d9a4c4fac2a1192ceef552f03091")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
