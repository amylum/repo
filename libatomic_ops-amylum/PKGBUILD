# Maintainer: Les Aker <me@lesaker.org>
pkgname=libatomic_ops-amylum
_realname=libatomic_ops
pkgver=7.6.2_1
pkgrel=1
pkgdesc="Provides semi-portable access to hardware provided atomic memory operations"
arch=('x86_64')
url="https://github.com/amylum/libatomic_ops"
license=('GPL2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("39d5cdabc2a3394b28883e38e58592c8ba7e773bfeec138b6bfe4a50ff15cfeb18537106f29a538e7f7b4e970eb0fc84548862f4e35e51006374dbf2f7158f65")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
