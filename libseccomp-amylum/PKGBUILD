# Maintainer: Les Aker <me@lesaker.org>
pkgname=libseccomp-amylum
_realname=libseccomp
pkgver=2.3.3_2
pkgrel=1
pkgdesc="Enhanced seccomp library"
arch=('x86_64')
url="https://github.com/amylum/libseccomp"
license=('LGPL2.1')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("5bee7e8fa378c2c07215c736e65d3510638436075eafc59d472731e51720469685ff231fdef7670d19d53ab1a2c2d00dddb0f9784546a2f06763ba3d4a6d099c")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
