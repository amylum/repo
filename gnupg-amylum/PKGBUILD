# Maintainer: Les Aker <me@lesaker.org>
pkgname=gnupg-amylum
_realname=gnupg
pkgver=2.2.8_1
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://github.com/amylum/gnupg"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("cccc42c1f2ea03dc6359deb741d37bd447674ac0bd2f37b5aa4fc4c03e079b595ef9e5cb31c07638878a17a740610ac5f0c116889c2bdac62eedbc025bcbe001")

conflicts=("${_realname}")
provides=("${_realname}")

depends=('libassuan-amylum' 'gpgme-amylum')

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
