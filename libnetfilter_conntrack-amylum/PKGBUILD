# Maintainer: Les Aker <me@lesaker.org>
pkgname=libnetfilter_conntrack-amylum
_realname=libnetfilter_conntrack
pkgver=1.0.7_1
pkgrel=1
pkgdesc="Library providing an API to the in-kernel connection tracking state table"
arch=('x86_64')
url="https://github.com/amylum/libnetfilter_conntrack"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("beeebb1ada8bf0d7984c8aa3a5b40066708fcea8f6fcb3977c4ea2d5e9f6d2458dd5ab3179b7f7dedbc1a739e88339b5b0d5ed17dfe538a9a158d14204e206e9")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
