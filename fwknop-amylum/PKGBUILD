# Maintainer: Les Aker <me@lesaker.org>
pkgname=fwknop-amylum
_realname=fwknop
pkgver=2.6.9_6
pkgrel=1
pkgdesc="FireWall KNock OPerator: Single Packet Authorization and Port Knocking"
arch=('x86_64')
url="https://github.com/amylum/fwknop"
license=('GPL2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("87607dd31a46867742d600038d32db6fea214713464074e6c9c26d6651c9162758a2d69650711cbcb005de99f73cd532aba6c918651046755776066a367c9657")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
