# i
pkgname=npth-amylum
_realname=npth
pkgver=1.2_2
pkgrel=1
pkgdesc="New portable threads library"
arch=('x86_64')
url="https://github.com/amylum/npth"
license=('LGPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("7612c58423681b8f2c54676ab2d8d87347619ea98d3983bf766643d0edd54a6bc68f125bd1c9f9180bd57d07c22f144a8c67625a64697c4a3991b142fa098bab")

depends=('bash')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
