# i
pkgname=npth-amylum
_realname=npth
pkgver=1.3_1
pkgrel=1
pkgdesc="New portable threads library"
arch=('x86_64')
url="https://github.com/amylum/npth"
license=('LGPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("4539b62e0c8e34b96f49c2ebf80b8e38bd86bc357a67e26fe68d8ddac231c55ca46242b1335195f8db6103e14cc816832a3dda6999930b9621c0532cbc9378d7")

depends=('bash')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
