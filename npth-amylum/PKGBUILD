# i
pkgname=npth-amylum
_realname=npth
pkgver=1.4_1
pkgrel=1
pkgdesc="New portable threads library"
arch=('x86_64')
url="https://github.com/amylum/npth"
license=('LGPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("d1604c09a85142f76ee764295e3e8b827b83025b82891b0ab4053eb8e7f6c14dece8674572404d675fd82c82cd7756ddebf080293ca5a85715fbf665b73225a2")

depends=('bash')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
