# Maintainer: Les Aker <me@lesaker.org>
pkgname=haveged-amylum
_realname=haveged
pkgver=1.9.1_1
pkgrel=1
pkgdesc="Entropy harvesting daemon using CPU timings"
arch=('x86_64')
url="https://github.com/amylum/haveged"
license=('GPL3')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("96bbcdbeb1fbc50bb4d1791bc1bdc6ec000405b2e2039286dbe5ec531e695a176578f963dd1d6f958411e3acd7bd4ceeaceacca7f1edc6c5f68ca82a39ba8adb")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
	cd "${pkgdir}"
	tar xf "${srcdir}/${_realname}.tar.gz"
	mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
