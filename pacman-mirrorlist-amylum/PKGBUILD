# Maintainer: Les Aker <me@lesaker.org>
pkgname=pacman-mirrorlist-amylum
_realname=pacman-mirrorlist
pkgver=20161102
pkgrel=1
pkgdesc="Arch Linux mirror list for use by pacman"
arch=('x86_64')
url="https://github.com/amylum/pacman-mirrorlist"
license=('MIT')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("6ca21772709a7a071075c3dcbbd898512d55d5df421478b7fadf579c7cca571dbb336ee44a4e3516081054444020dd8fabd05da985f256ddbfa428bafbe2a20b")

backup=(etc/pacman.d/mirrorlist)

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
}
