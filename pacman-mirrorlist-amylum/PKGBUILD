pkgname=pacman-mirrorlist-amylum
_realname=pacman-mirrorlist
pkgver=20160201
pkgrel=1
pkgdesc="Arch Linux mirror list for use by pacman"
arch=('x86_64')
url="https://github.com/amylum/pacman-mirrorlist"
license=('MIT')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("fce9da8bcc7b27778eb51f57c3a875959ba6b85616dd309a862a70855975dae8aee3e1f36881bd1637b204ae8241a2ae28278f437a8081ce0c4e25ec4b47101d")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
}
