# Maintainer: Les Aker <me@lesaker.org>
pkgname=pacman-amylum
_realname=pacman
pkgver=5.1.2_8
pkgrel=1
pkgdesc="A library-based package manager with dependency support"
arch=('x86_64')
url="https://github.com/amylum/pacman"
license=('GPL2')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("b8f684f4c339925a235c45e8ad08276b8dcc9f862547b3315017d9868aee92af38696b3330cc3ac05527de5cba3b79bd90b60527b220f8faca7a94c18533a2ef")

backup=(etc/pacman.conf etc/makepkg.conf)

depends=('bash-amylum' 'gnupg-amylum' 'libarchive-amylum')

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
