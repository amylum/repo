# Maintainer: Les Aker <me@lesaker.org>
pkgname=bash-amylum
_realname=bash
pkgver=5.0p3_1
pkgrel=1
pkgdesc="The GNU Bourne Again shell"
arch=('x86_64')
url="https://github.com/amylum/bash"
license=('GPL3')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("ca374e5d7ba65165743da9a5ad907fa188f0e3052b83d84203e47d9ae46eed382e2f673181ecb1c333f73cf468acdde6fe281010b8057fed9efd7d89881294ba")

conflicts=("${_realname}")
provides=('sh' "${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    ln -s bash usr/bin/sh
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
