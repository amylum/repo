# Maintainer: Les Aker <me@lesaker.org>
pkgname=libnfnetlink-amylum
_realname=libnfnetlink
pkgver=1.0.1_2
pkgrel=1
pkgdesc="Low-level library for netfilter related kernel/userspace communication"
arch=('x86_64')
url="https://github.com/amylum/libnfnetlink"
license=('GPL')
source=("https://github.com/amylum/${_realname}/releases/download/${pkgver//_/-}/${_realname}.tar.gz")
noextract=("${_realname}.tar.gz")
sha512sums=("ef78d6214467e465fc173d59abc76a6c3f55ce358f82fc10f037b02ecb6161e781ce69c23393a60f258b155bdf133681afbddcc32fbe2859f55796e170dfeb89")

conflicts=("${_realname}")
provides=("${_realname}")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${_realname}.tar.gz"
    mv usr/share/licenses/${_realname} usr/share/licenses/${pkgname}
}
