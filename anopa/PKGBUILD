sha512sums=("3537f41e4473ca5af2a36e7f6d1b533dbde162cf9d0cf8f43389301d1f6a7302e305b8d918feae9559fce1b87d7f8c8f52ff7440976de16076fc69f8c1249fc8")

package() {
    cd "${pkgdir}"
