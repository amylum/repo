noextract=("${pkgname}.tar.gz")
sha512sums=("53c4169a797c9c9d00cd56802c3bd9e4bbb7f745a338786350b3246621ab32a5b3747990beda877fcfd1b410bd5515c487f0bda70b5172d33f6fb10cb05ccab8")

package() {
	cd "${pkgdir}"
