pkgname=anopa
pkgver=0.4.0_9
pkgrel=1
pkgdesc="Process supervision framework built on S6"
arch=('x86_64')
url="https://github.com/amylum/anopa"
license=('GPL3')
source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("f32c302fa77717822e697a352e2ea8bede1db1e401c9b407deb0ee503a8b85e808b496dbd596f13ea48efce637b8e5768d22b1f9f6d24570225f9a9382f92ec6")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
