source=("https://github.com/amylum/${pkgname}/releases/download/${pkgver//_/-}/${pkgname}.tar.gz")
noextract=("${pkgname}.tar.gz")
sha512sums=("f7e05f1604f1796cdd14707432d00adc7c33e6f4d0f8dca842a32266f8e0663ca2dc8f9211226d0825e276597d3917fa388885804e0c1fb82a91357996631591")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
