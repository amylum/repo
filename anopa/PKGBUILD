noextract=("${pkgname}.tar.gz")
sha512sums=("105951bb450157a64f91e2064d5087891cf45e630ae3a7398a2efd29e32585c52f578b1d411b3c2e1f1a5d2d4ab224c35cc60b0301c9e44034d0a90899f1ca74")

package() {
    cd "${pkgdir}"
