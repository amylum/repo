noextract=("${pkgname}.tar.gz")
sha512sums=("d4eb284534576b2f33308c1d045eef41dd5e557b91fe20774c532298f6474895b269f1cf23c65b0f0322f8af5d062aa4f745760a7f5a9f68fe04bffb4f41601f")

package() {
    cd "${pkgdir}"
    tar xf "${srcdir}/${pkgname}.tar.gz"
}
