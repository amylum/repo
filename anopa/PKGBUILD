noextract=("${pkgname}.tar.gz")
sha512sums=("d6dde58fadfaf949a9d8c31752d256cef8b919364d9d3cfa644a1a48ec58c55e62265d30f6cae53e2ccade2ce3ece617880745dc01dace9d5a570f30eab84668")

package() {
    cd "${pkgdir}"
